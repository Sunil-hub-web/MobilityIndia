                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Where"
                                android:padding="@dimen/_5dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/socialwhere"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:maxLength="500" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_20dp"
                                android:hint="What"
                                android:padding="@dimen/_5dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/socialwhat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:maxLength="500" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/backgroundscreen"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="serif"
                            android:gravity="center|center_vertical"
                            android:text="Vocational Training"
                            android:textColor="#768Ac2"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_marginTop="@dimen/_5dp"
                            android:layout_marginRight="@dimen/_10dp"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:background="@drawable/backgroundonoff"
                            android:gravity="center"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight=".6"
                                android:fontFamily="serif"
                                android:gravity="left"
                                android:paddingLeft="@dimen/_20dp"
                                android:text="Vocational Training"
                                android:textColor="#515151"
                                android:textStyle="bold" />

                            <com.github.angads25.toggle.LabeledSwitch
                                android:id="@+id/vocationtraning"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
