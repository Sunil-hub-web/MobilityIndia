                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="When"
                                android:padding="@dimen/_5dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/vocationwhen"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
