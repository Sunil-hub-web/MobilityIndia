                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_marginTop="@dimen/_5dp"
                            android:layout_marginRight="@dimen/_10dp"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:background="@drawable/backgroundonoff"
                            android:gravity="center"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight=".6"
                                android:fontFamily="serif"
                                android:gravity="left"
                                android:paddingLeft="@dimen/_20dp"
                                android:text="Skill Development"
                                android:textColor="#515151"
                                android:textStyle="bold" />

                            <com.github.angads25.toggle.LabeledSwitch
                                android:id="@+id/switchskilldevelopment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_15dp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_marginRight="@dimen/_15dp"
                                android:layout_marginBottom="@dimen/_10dp"
                                android:layout_weight="1.4"
                                android:textSize="14sp"
                                app:colorBorder="#00c4a6"
                                app:colorOn="@color/purple_500"
                                app:textOff="No"
                                app:textOn="Yes"
                                android:clickable="false"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/skillldaveloplayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="When"
                                android:padding="@dimen/_5dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/skillwhen"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:cursorVisible="false"
                                    android:drawableRight="@drawable/ic_calender"
                                    android:drawableTint="@color/purple_500"
                                    android:focusable="false"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:textIsSelectable="false" />


                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Where"
                                android:padding="@dimen/_5dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/skillwhere"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:maxLength="500" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_20dp"
                                android:hint="What"
                                android:padding="@dimen/_5dp">

                                <com.google.android.material.textfield.TextInputEditText
